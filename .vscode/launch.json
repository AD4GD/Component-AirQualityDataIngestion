{
    "version": "0.2.0",
    "configurations": [
        ///////////////////////////Config for local debug//////////////////////////////////////
        {
            "name": "Python: Module - app", // top-level package called "app"
            "type": "python",
            "request": "launch",
            "module": "${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}/app"
        },
        {
            "name": "Python: Module - api_wrappers",
            "type": "python",
            "request": "launch",
            "module": "api_wrappers.${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}/app"
        },
        {
            "name": "Python: Module - routerhelpers",
            "type": "python",
            "request": "launch",
            "module": "routers.helpers.${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}/app"
        },
        ///////////////////////////Testing config//////////////////////////////////////
        {
            "name": "Python: Module - testing",
            "type": "python",
            "request": "launch",
            "module": "testing.${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}/app"
        },
        {
            "name": "Python: Module - testing-api",
            "type": "python",
            "request": "launch",
            "module": "testing.api.${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}/app"
        },
        ///////////////////////////Config for local debug//////////////////////////////////////
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Docker: Python - Fastapi",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "fastapi"
            }
        }
    ]
}